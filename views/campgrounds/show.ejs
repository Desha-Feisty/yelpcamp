<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/stars.css">

<div
class="row justify-content-center align-items-start"
style="min-height: 70vh"
>
<div
class="col-12 col-md-6 col-lg-5 d-flex flex-column justify-content-center"
>
<div
class="card shadow-lg border-0 rounded-4 overflow-hidden my-auto"
style="margin-top: auto; margin-bottom: auto"
>
<div id="carouselExample" class="carousel slide">
  <div class="carousel-inner">
    <% campground.image.forEach((image, i) => {%>
      <div class="carousel-item <%= i === 0 ? "active" : ''  %>">
        <img src="<%= image.url %>" class="d-block w-100" alt="<%= image.filename %>">
      </div>
    </div>
    <% }) %>
    <% if (campground.image.length > 1){ %>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
    <% } %>
  </div>
  <div class="card-body p-3">
    <h4 class="card-title mb-2 fw-bold" style="font-size: 1.3rem">
      <%= campground.title%>
    </h4>
    <% if(campground.author){ %>
      <h5><i>Submitted by:<%= campground.author.username %> </i></h5>
      <% } %>
      <p class="card-text mb-2" style="font-size: 1rem">
        <%= campground.description%>
      </p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item text-muted" style="font-size: 0.95rem">
        <i class="bi bi-geo-alt"></i> <%= campground.location%>
      </li>
      <li class="list-group-item fw-semibold" style="font-size: 0.95rem">
        $<%= campground.price%> <span class="text-secondary">/night</span>
      </li>
    </ul>
    <% if(currentUser && campground.author &&
    currentUser._id.equals(campground.author._id)){ %>
      <div
      class="card-body d-flex justify-content-between align-items-center p-2"
      >
      <a
      class="btn btn-info btn-sm px-3"
      href="/campgrounds/<%=campground._id%>/edit"
      >Edit</a
      >
      <form
      class="d-inline"
      action="/campgrounds/<%=campground._id%>?_method=DELETE"
      method="POST"
      >
      <button class="btn btn-danger btn-sm px-3">Delete</button>
    </form>
    <% } %>
    <div
    class="card-footer text-muted text-end bg-light p-2"
    style="font-size: 0.85rem"
    >
    2 days ago
  </div>
</div>
</div>
<div class="col-12 col-md-6 col-lg-7">
  <% if(currentUser){ %>
    <h4 class="mt-2 mb-3">Leave a review</h4>
    <form
    action="/campgrounds/<%= campground._id %>/reviews"
    method="post"
    class="mb-2 needs-validation"
    novalidate
    >
    <div class="mb-2">
      <fieldset class="starability-basic">
        <legend>rating:</legend>
        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="rating" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="rating" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="rating" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="rating" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="rating" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    </div>
    <div class="mb-2">
      <label class="form-label" for="body">Review</label>
      <textarea
      class="form-control"
      name="body"
      id="body"
      cols="40"
      rows="2"
      required
      style="font-size: 0.95rem"
      ></textarea>
    </div>
    <button class="btn btn-success btn-sm">Submit</button>
  </form>
  <% } %> <% for(let review of campground.reviews){%>
    <div class="card mb-2" style="font-size: 0.95rem">
      <div class="card-body p-2">
        <p class="starability-result" data-rating="<%= review.rating %>"></p>
        <p class="mb-0">- <%= review.body %></p>
        <p>by <i><%= review.author.username %></i></p>
        <% if(currentUser && review.author &&
        currentUser._id.equals(review.author._id)){ %>
          <form
          class="d-inline"
          action="/campgrounds/<%= campground._id %>/reviews/<%= review._id%>?_method=DELETE"
          method="POST"
          >
          <button class="btn btn-danger btn-sm px-3">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
</div>
