<% layout('layouts/boilerplate')%>

<div class="row justify-content-center align-items-start" style="min-height: 70vh;">
    <div class="col-12 col-md-6 col-lg-5 d-flex flex-column justify-content-center">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden my-auto" style="margin-top:auto; margin-bottom:auto;">
            <img src="<%= campground.image%>" class="card-img-top img-fluid" alt="Campground image" style="object-fit: cover; height: 200px;">
            <div class="card-body p-3">
                <h4 class="card-title mb-2 fw-bold" style="font-size:1.3rem;"><%= campground.title%></h4>
                <p class="card-text mb-2" style="font-size:1rem;"><%= campground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted" style="font-size:0.95rem;"><i class="bi bi-geo-alt"></i> <%= campground.location%></li>
                <li class="list-group-item fw-semibold" style="font-size:0.95rem;">$<%= campground.price%> <span class="text-secondary">/night</span></li>
            </ul>
            <div class="card-body d-flex justify-content-between align-items-center p-2">
                <a class="btn btn-info btn-sm px-3" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-sm px-3">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted text-end bg-light p-2" style="font-size:0.85rem;">
                2 days ago
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 col-lg-7">
        <h4 class="mt-2 mb-3">Leave a review</h4>
        <form action="/campgrounds/<%= campground._id %>/reviews" method="post" class="mb-2 needs-validation" novalidate>
            <div class="mb-2">
                <label for="rating" class="form-label">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="rating" id="rating">
            </div>
            <div class="mb-2">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="body" id="body" cols="40" rows="2" required style="font-size:0.95rem;"></textarea>
            </div>
            <button class="btn btn-success btn-sm">Submit</button>
        </form>
        <% for(let review of campground.reviews){%>
            <div class="card mb-2" style="font-size:0.95rem;"><div class="card-body p-2">
                <h6 class="card-title mb-1">Rating: <%= review.rating %>‚≠ê</h6>
                <p class="mb-0">- <%= review.body %></p> 
                    <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=delete" method="post">
                    <button class="btn btn-danger mt-3 btn-sm px-3">Delete</button>
                </form></div></div>
        <% } %> 
    </div>
</div>