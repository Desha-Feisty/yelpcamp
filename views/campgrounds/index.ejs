<% layout('layouts/boilerplate.ejs') %>
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Campgrounds</h1>
        <a href="/campgrounds/new" class="btn btn-primary px-4 py-2 fw-semibold shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>New Campground
        </a>
    </div>
    <% for (let campground of campgrounds){ %>
        <div class="card mb-4 shadow-sm border-0 rounded-4">
            <div class="row g-0 align-items-center">
                <div class="col-md-4">
                    <img src="<%= campground.image %>" class="img-fluid rounded-start" alt="Campground image" style="object-fit: cover; height: 220px; width: 100%;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title fw-bold"><%= campground.title %></h5>
                        <p class="card-text"><%= campground.description%></p>
                        <p class="card-text"><small class="text-muted"><i class="bi bi-geo-alt"></i> <%= campground.location %></small></p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-primary px-3">View</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

