<% layout('layouts/boilerplate.ejs') %>
<div class="container py-5">
    <div class="row justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h1 class="text-center mb-4 fw-bold">New Campground</h1>
                    <form action="/campgrounds" class="needs-validation" method="post" novalidate>
                        <div class="mb-4">
                            <label class="form-label fw-semibold" for="title">Title</label>
                            <input required class="form-control" type="text" name="title" id="title">
                            <div class="valid-feedback">Looking good</div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-semibold" for="location">Location</label>
                            <input required class="form-control" type="text" name="location" id="location">
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-semibold" for="image">Image URL</label>
                            <input required class="form-control" type="text" name="image" id="image">
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-semibold" for="description">Description</label>
                            <textarea required class="form-control" name="description" id="description" rows="3"></textarea>
                        </div>
                        <div class="mb-4">
                            <label for="price" class="form-label fw-semibold">Price</label>
                            <div class="input-group">
                                <input required type="text" class="form-control" placeholder="0" name="price" aria-label="Amount (to the nearest dollar)">
                                <span class="input-group-text">$</span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <button class="btn btn-success px-4 py-2 fw-semibold shadow-sm" type="submit">
                                <i class="bi bi-plus-circle me-2"></i>Add Campground
                            </button>
                            <a href="/campgrounds" class="btn btn-outline-secondary px-4 py-2 fw-semibold">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
